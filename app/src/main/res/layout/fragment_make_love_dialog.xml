<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/fragment_make_love_dialog_lovee_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/fragment_make_love_dialog_lovee_username"/>

    <EditText
        android:id="@+id/fragment_make_love_dialog_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_make_love_dialog_lovee_username"
        android:hint="@string/fragment_make_love_dialog_reason"/>

    <EditText
        android:id="@+id/fragment_make_love_dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="3"
        android:inputType="textMultiLine"
        android:gravity="left|top"
        android:layout_below="@id/fragment_make_love_dialog_reason"
        android:hint="@string/fragment_make_love_dialog_message"/>

    <CheckBox
        android:id="@+id/fragment_make_love_dialog_private"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_make_love_dialog_message"
        android:hint="@string/fragment_make_love_dialog_private"
        android:layout_alignParentRight="true"/>

    <ProgressBar
        android:id="@+id/fragment_make_love_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:visibility="gone"/>


</RelativeLayout>